@model Mineral
@{
    ViewData["Title"] = "AddMineral";
    Layout = "~/Views/Shared/_mineralLayout.cshtml";
}
<h2>Nova Reserva <a asp-action="Index" class="btn btn-sm btn-outline-success">Retorna</a></h2>

<form asp-action="AddMineral" method="post">
    <div class="form-group">
        <label for="MineralName">Nome:</label>
        <input class="form-control" name="MineralName" />
    </div>
    <div class="form-group">
        <label for="Description">Descrição:</label>
        <input class="form-control" name="Description" />
    </div>
    <div class="checkbox">
        <label for="Completed"><input type="checkbox" name="Completed"> Concluído</label>
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Novo Mineral</button>
    </div>
</form>
@if (Model != null)
{
    <h2>Mineral</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Concluído</th>
                <th>Criado em</th>
                <th>Atualizado em</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.MineralId</td>
                <td>@Model.MineralName</td>
                <td>@Model.Description</td>
                <td>@Model.Completed</td>
                <td>@Model.CreatedAt</td>
                <td>@Model.UpdatedAt</td>
            </tr>

        </tbody>
    </table>
}