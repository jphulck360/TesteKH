@model Mineral
@{
    ViewData["Title"] = "UpdateMineral";
    Layout = "~/Views/Shared/_mineralLayout.cshtml";
}
<h2>Atualizar Mineral <a asp-action="Index" class="btn btn-sm btn-success">Retorna</a></h2>
<form method="post">
    <div class="form-group">
        <label asp-for="MineralId">Id</label>
        <input class="form-control" asp-for="MineralId" readonly />
    </div>
    <div class="form-group">
        <label asp-for="MineralName">Nome</label>
        <input class="form-control" asp-for="MineralName" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Descrição</label>
        <input class="form-control" asp-for="Description" />
    </div>
    @*<div class="form-group">
        <label asp-for="Completed">Concluído</label>
        <input type="checkbox" class="form-control" asp-for="Completed" />
    </div>*@

    <div class="checkbox">
        <label asp-for="Completed">
            <input type="checkbox" class="form-control" asp-for="Completed"> Concluído
        </label>
    </div>

    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Atualizar</button>
    </div>
</form>
@if (ViewBag.Result == "Sucesso")
{
    <h2>Reservas</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Concluído</th>
                <th>Criado em</th>
                <th>Atualizado em</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.MineralId</td>
                <td>@Model.MineralName</td>
                <td>@Model.Description</td>
                <td>@Model.Completed</td>
                <td>@Model.CreatedAt</td>
                <td>@Model.UpdatedAt</td>
            </tr>
        </tbody>
    </table>
}
